---
import '@src/global.css';
const pathName = Astro.url.pathname;
---

<html>
    <head>
        <meta charset='utf-8' />
        <link rel='sitemap' href='/sitemap-index.xml' />
        <link rel='icon' type='image/png' href='/favicon.png' />
        <meta name='viewport' content='width=device-width' />
    </head>
    <body id='header'>
        <div>
            <div class='header sticky z-[100] top-[0] flex px-4 py-5 sm:py-3 mb-10 bg-(--background) text-lg' id='header'>
                <a href={'/fr'} class='cursor-pointer'>
                    <div class='header-logo m-auto sm:py-5 sm:px-5 text-[1.5em] font-bold'>Garutako</div>
                </a>
                <div class='flex flex-auto flex-wrap justify-end m-auto gap-3'>
                    <a href={'/fr/projects'}>
                        <div class='px-3 sm:px-3 py-2 cursor-pointer bg-(--cyan) text-(--background) text-center min-w-20'>Projects</div>
                    </a>
                    <a href={'/fr/blog'}>
                        <div class='px-3 sm:px-3 py-2 cursor-pointer bg-(--magenta) text-(--background) text-center min-w-20'>Blog</div>
                    </a>
                    <a href={'/fr/about'}>
                        <div class='px-3 sm:px-3 py-2 cursor-pointer bg-(--yellow) text-(--background) text-center min-w-20'>Ã€ propos</div>
                    </a>
                    <a href={'/en' + pathName.slice(3)}>
                        <div class='px-3 sm:px-3 py-2 cursor-pointer bg-(--text) text-(--background) text-center'>EN</div>
                    </a>
                </div>
            </div>
            <main>
                <div class='flex justify-center items-center'>
                    <main id='page-container' class='w-full mx-3 px-5 mb-20'>
                        <slot />
                    </main>
                </div>
            </main>
        </div>
    </body>
</html>
